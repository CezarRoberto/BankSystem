generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id         String   @id @unique @default(uuid())
  name       String
  cnpj       String
  code       String   @unique
  clients    Client[]
  created_at DateTime @default(now())

  @@map("companies")
}

model Client {
  id           String        @id @unique @default(uuid())
  name         String
  cpf          String
  email        String        @unique
  password     String
  company      Company       @relation(fields: [company_id], references: [id])
  company_id   String
  transaction Transaction[] @relation("ClientsOnTransactions")

  @@map("clients")
}

model Transaction {
  id      String          @id @unique @default(uuid())
  type    TransactionType @default(DEPOSIT)
  amount  String
  clients Client[] @relation("ClientsOnTransactions")


  @@map("transactions")
}

enum TransactionType {
  DEPOSIT
  WITHDRAW
}


